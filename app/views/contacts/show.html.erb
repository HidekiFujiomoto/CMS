



<body>
  <div class="container">

    <nav class="navbar navbar-default">
      <div class="container-fluid">

        <!--- GlobalNavi --->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <!--- ハンバーガーメニュー --->
            <span class="sr-only">Community Management System</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Community Management System", tops_path, class: "navbar-brand" %>
        </div>
        <!--- GlobalNavi[PC] --->
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/users">メンバー検索</a></li>
            <li><a href="/posts">掲示板</a></li>
            <li><a href="/contacts">メッセージ</a></li>
            <li><%= link_to "マイページ", user_path(current_user.id) %></li>
          </ul>
        </div>
      </div>  <!--- /container-fluid --->
    </nav>


    <div class="content">
      <div class="main_content">

        <!--- PageTitle --->
        <div class="page_title">
          <h3>メッセージ詳細</h3>
        </div>

        <div class="contact_detail_index">
          <div class="contact_detail">
            <p><span class="bold">受信者：</span><%= @contact.contact_user_name %></p>
            <p><span class="bold">送信者：</span><%= @contact.user_name %></p>
          </div>
          <div class="contact_detail">
            <label>送付内容</label>
            <p><%= simple_format(@contact.contact_content) %></p>
          </div>
          <div class="contact_detail">
            <label>送付画像</label>
            <p><%= image_tag @contact.contact_img %></p>
          </div>
        </div> <!--- /contact_detail_index --->

        <div class="retrun_contact_btn">
          <%= link_to 'メッセージ一覧へ戻る', contacts_path %>
        </div>

      </div> <!-- /main_content --->
    </div> <!-- /content -->

    <footer class="footer">
      <p>Hideki Fujimoto test application</p>
    </footer>

  </div> <!--- /container --->
</body>
