<%= form_with(model: @post, local: true, url: choose_new_or_edit) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="post_item">
    <%= form.label "投稿タイトル" %><br>
    <%= form.text_field :post_title %>
  </div>
  <div class="post_item">
    <%= form.label "投稿内容" %><br>
    <%= form.text_field :post_content %>
  </div>
  <div class="post_item">
    <%= form.label "画像1" %><br>
    <%= form.file_field :post_image_1 %>
    <%= form.hidden_field :post_image_1_cache %>
  </div>
  <div class="submit_btn">
    <%= form.submit :class=>"btn" %>
  </div>
<% end %>

<div class="return_post">
  <%= link_to "掲示板に戻る", posts_path %>
</div>
