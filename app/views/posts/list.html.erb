
<body>
  <div class="container">

    <nav class="navbar navbar-default">
      <div class="container-fluid">

        <!--- GlobalNavi --->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <!--- ハンバーガーメニュー --->
            <span class="sr-only">Community Management System</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Community Management System", tops_path, class: "navbar-brand" %>
        </div>
        <!--- GlobalNavi[PC] --->
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><a href="/users">メンバー検索</a></li>
            <li><a href="/posts">掲示板</a></li>
            <li><a href="/contacts">メッセージ</a></li>
            <li><%= link_to "マイページ", user_path(current_user.id) %></li>
            <li>
              <% if logged_in? %>
              <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>  <!--- /container-fluid --->
    </nav>

    <div class="content">
      <div class="main_content">

      <!--- PageTitle --->
      <div class="page_title">
        <h3>お気に入り投稿一覧</h3>
      </div>


      <div class="post_index">
        <div class="row">
          <table>
            <% current_user.bookmarks.each do |bookmark| %>

              <!--- 投稿内容 --->
              <tr class="post_content">
                <td>投稿者：<%= bookmark.post.post_user_name %></td> <!--- あとでpost.user_nameへ修正 --->
              </tr>
              <tr class="post_content bold">
                <td>タイトル：<%= bookmark.post.post_title %></td>
              </tr>
              <tr class="post_content">
                <td><%= bookmark.post.post_content %></td>
              </tr>
              <tr class="post_content">
                <td>
                  <%= image_tag bookmark.post.post_image_1 %>
                  <%= image_tag bookmark.post.post_image_2 %>
                  <%= image_tag bookmark.post.post_image_3 %>
                </td>
              </tr>
              <!--- 詳細ボタン --->
              <tr class="post_content font-blue">
                <td><%= link_to "詳細を見る", post_path(bookmark.post.id) %></td>
              </tr>

              <tr><td></td></tr>

            <% end %> <!--- /"@posts.each do |post|" --->
          </table>
        </div> <!--- row --->

        <div class="return_user font-blue">
          <%= link_to "掲示板に戻る", posts_path %>
        </div>
      </div> <!--- post_index --->

      </div> <!-- /main_content --->
    </div> <!-- /content -->

    <footer class="footer">
      <p>Hideki Fujimoto test application</p>
    </footer>

  </div> <!--- /container --->
</body>
